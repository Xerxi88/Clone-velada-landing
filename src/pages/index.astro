<html lang="es">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width" />
    <title>La velada del año 2023</title>
  </head>
  <body>

    <header class="realtive">
      <div
        class="md:absolute md:left-1/2 md:-translate-x-1/2 flex flex-col gap-1 justify-center items-center mt-4 lg:mt-0 lg:top-8 z-10"
      >
        <img
          class="w-32 lg:w-64 h-auto pt-10"
          alt="Logo de la Velada"
          src="./logo.webp"
        />
        <h1
          class="font-boxing text-6xl uppercase text-white text-center font-bold"
        >
          <span
            class="bg-clip-text text-transparent bg-gradient-to-b from-white via-gray-400 to-white inline-block leading-relaxed"
            >La velada del año</span
          >
          <span class="text-yellow-300"> III</span>
        </h1>
      </div>
    </header>
    <main class="relative">
      <section
        id="boxeadores"
        class={`flex justify-between relative 
        [&>div>img]:absolute 
        [&>div>img]:bottom-0
        [&>div>img]:w-auto
        [&>div>img]:animate-duration-1000 
        [&>div>img]:animate-ease-in-out
        h-[40vh] md:h-[72vh] lg:h-screen pt-4 lg:pt-24 border-b border-white/10`}
      >
        <div
          class="absolute inset-0 bg-[radial-gradient(ellipse_at_center,_var(--tw-gradient-stops))] from-[#131313] via-zinc-800 to-zinc-950">
        </div>

        <div class="absolute inset-0 flex gap-x-2 left-1/2 -translate-x-1/2 justify-center opacity-40 blur-sm">
          <div class="w-4 h-full bg-[radial-gradient(ellipse_at_center,_var(--tw-gradient-stops))] from-blue-100 via-blue-300 to-blue-500"></div>
          <div class="w-4 h-full bg-[radial-gradient(ellipse_at_center,_var(--tw-gradient-stops))] from-blue-100 via-blue-300 to-blue-500"></div>
          <div class="w-4 h-full bg-[radial-gradient(ellipse_at_center,_var(--tw-gradient-stops))] from-blue-100 via-blue-300 to-blue-500"></div>
        </div>
    
        <div class="relative w-full h-full overflow-hidden">
          <img
            class="coscu left-0 h-full z-[60] animate-fade-right"
            src="./boxers/coscu.webp"
            alt="Coscu"
          />
          <img
            class="mayichi left-[5%] h-[80%] z-50 animate-fade-right animate-delay-300"
            src="./boxers/mayichi.webp"
            alt="Mayichi"
          />
          <img
            class="viruzz left-[15%] h-[75%] z-40 animate-fade-right animate-delay-500"
            src="./boxers/viruzz.webp"
            alt="Viruzz"
          />
          <img
            class="fernan left-[28%] h-[70%] z-30 animate-fade-right animate-delay-700"
            src="./boxers/fernanfloo.webp"
            alt="Fernanfloo"
            
          />
          <img
            class="la-rivers left-[40%] h-[68%] z-20 animate-fade-right animate-delay-1000"
            src="./boxers/la-rivers.webp"
            alt="Rivers"
          />
          <img
            class="left-[45%] h-[62%] z-10 animate-fade-right animate-delay-[1200ms]"
            src="./boxers/papigavi.webp"
            alt="Papigavi"
          />
        </div>
        <div class="relative w-full h-full overflow-hidden">
          <img
            class="german right-0 h-full z-[60] animate-fade-left object-cover"
            src="./boxers/german.webp"
            alt="German"
          />
          <img
            class="amouranth right-[5%] h-[80%] z-50 animate-fade-left animate-delay-300"
            src="./boxers/amouranth.webp"
            alt="Amouranth"
          />
          <img
            class="shelao right-[15%] h-[75%] z-40 animate-fade-left animate-delay-500"
            src="./boxers/shelao.webp"
            alt="Shelao"
          />
          <img
            class="luzu right-[28%] h-[70%] z-30 animate-fade-left animate-delay-700"
            src="./boxers/luzu.webp"
            alt="Luzu"
          />
          <img
            class="rivers right-[38%] h-[67%] z-20 animate-fade-left animate-delay-1000"
            src="./boxers/rivers.webp"
            alt="Rivers"
          />
          <img
            class="right-[45%] h-[62%] z-10 animate-fade-left animate-delay-[1200ms]"
            src="./boxers/ampeter.webp"
            alt="Ampeter"
          />
        </div>
       
      </section>
      <div
      id="info"
      class="lg:absolute lg:bottom-48 z-50 mx-auto lg:left-1/2 lg:-translate-x-1/2"
    >
      <div class="flex flex-col">
        <div class="px-5 pt-4 pb-2 bg-white text-black text-center">
          <h2 class="font-boxing text-7xl">1 de JULIO</h2>
        </div>
        <div class="px-5 pt-2 pb-1 bg-black text-center">
          <a
            class="font-boxing text-[50px] hover:contrast-150 hover:scale-105 transition inline-block"
            href="'https://twitch.tv/ibai"
            target="_blank"
            rel="noopener norefferrer"
            ><span class="text-white">twitch.tv/</span><span
              class="text-yellow-300">ibai</span
            ></a
          >
        </div>
        <div class="px-5 pt-2 pb-1 bg-sky-500 text-black text-center">
          <a
            class="hover:contrast-150 hover:scale-105 transition font-boxing text-4xl inline-block"
            href="'https://twitch.tv/ibai"
            target="_blank"
            rel="noopener norefferrer">Comprar entradas</a
          >
        </div>
      </div>
    </div>
    <div id="combat"
         class="absolute bottom-48 z-50 mx-auto left-1/2 -translate-x-1/2 flex flex-col gap-y-24 opacity-0 invisible">
        <div class="px-5 pt-4 pb-2 bg-black text-white text-center">
          <h2 class="font-boxing-striped text-7xl">Coscu</h2>
        </div>
        <span class="left-1/2 -translate-x-1/2 top-1/2 -translate-y-1/2 font-boxing text-yellow-500 text-7xl block absolute [text-shadow:3px_3px_0px_red,4px_4px_0px_orange,5px_5px_0px_yellow]">VS</span>
        <div class="px-5 pt-4 pb-2 bg-white text-black text-center">
          <h2 class="font-boxing-striped text-7xl">German</h2>
        </div>


    </div>
    </main>
  </body>
</html>

<style is:global>
  body {
    background-color: #131313;
  }
  @font-face {
    font-family: "Boxing";
    src: url("./fonts/boxing.otf");
    font-weight: bold;
  }
  @font-face {
    font-family: "Boxing Striped";
    src: url("./fonts/boxing-striped.woff2");
    font-weight: bold;
  }
  
  .fernan{
    clip-path: polygon(100% 91%, 81% 71%, 77% 32%, 57% 28%, 58% 24%, 71% 22%, 76% 14%, 69% 11%, 62% 0, 0% 0%, 0% 100%, 100% 100%);
  }
  .viruzz{
    clip-path: polygon(100% 87%, 89% 40%, 69% 29%, 72% 24%, 86% 23%, 90% 14%, 83% 10%, 89% 3%, 62% 0, 0% 0%, 0% 100%, 100% 100%);
  }
  .mayichi{
    clip-path: polygon(99% 80%, 88% 72%, 92% 41%, 61% 30%, 63% 28%, 70% 24%, 79% 17%, 79% 7%, 62% 0, 0% 0%, 0% 100%, 100% 100%);
  }

  .amouranth{
    clip-path: polygon(0 83%, 32% 63%, 28% 48%, 18% 41%, 23% 36%, 45% 30%, 42% 23%, 32% 16%, 35% 0, 100% 0, 100% 100%, 0 100%);
  }
  .shelao{
    clip-path: polygon(0 77%, 12% 63%, 17% 43%, 21% 33%, 40% 27%, 36% 25%, 23% 23%, 16% 17%, 31% 4%, 100% 4%, 100% 100%, 0 100%);
  }
  .luzu{
    clip-path: polygon(9% 73%, 14% 60%, 17% 43%, 21% 33%, 39% 27%, 33% 23%, 22% 21%, 21% 16%, 27% 3%, 100% 0, 100% 100%, 0 100%);
  }
  .rivers{
    clip-path: polygon(4% 77%, 16% 60%, 21% 53%, 15% 45%, 20% 36%, 21% 30%, 21% 20%, 21% 7%, 29% 0, 100% 0, 100% 100%, 0 100%);
  }
  .la-rivers{
    clip-path: polygon(93% 88%, 89% 55%, 95% 51%, 94% 44%, 61% 28%, 64% 26%, 86% 25%, 88% 14%, 75% 0, 0 0, 0 100%, 100% 100%);
  }
  .german{
    clip-path: polygon(100% 2%, 51% 1%, 23% 5%, 0% 14%, 7% 19%, 13% 24%, 11% 29%, 19% 33%, 31% 41%, 49% 42%, 66% 40%, 69% 44%, 14% 54%, 6% 69%, 9% 76%, 3% 80%, 7% 84%, 10% 90%, 0% 100%, 98% 100%);
  }
  .coscu{
    clip-path: polygon(0 0, 48% 2%, 98% 9%, 98% 15%, 94% 23%, 93% 25%, 100% 31%, 86% 33%, 81% 35%, 76% 38%, 66% 42%, 35% 41%, 24% 44%, 50% 50%, 67% 63%, 79% 77%, 84% 89%, 89% 100%, 0% 100%, 0 100%);
  }
</style>

<script>
  const boxers = document.querySelector("#boxeadores");
  const boxersImages = boxers.querySelectorAll("img");

  const info = document.querySelector("#info")
  const combat = document.querySelector("#combat")

  boxersImages.forEach((img) => {

    img.addEventListener("mouseleave",()=>{
      boxersImages.forEach(img=>{
        img.setAttribute("style", "transition: all .3s ease-in-out")
        info.setAttribute("style","opacity:1; transition:all .3s ease-in-out")
        combat.setAttribute("style","opacity:0; transition: all .3 ease-in-out; visibility:hidden")
      })
    })
    
    img.addEventListener("mouseenter", () => {
      const sectionIMages = img.parentNode.children;
      const position = Array.from(sectionIMages).indexOf(img);
      //cogemos la imagen del lado izquierdo y del derecho
      const [leftBoxer, rightBoxer] = [
        boxersImages[position],
        boxersImages[position + boxersImages.length / 2],
      ]

      info.setAttribute("style","opacity:0; transition:all .3s ease-in-out")
      combat.setAttribute("style","opacity:1; transition: all .3 ease-in-out; visibility:visible")

      const [firstBoxerName,secondBoxerName] = combat.querySelectorAll("h2")
      firstBoxerName.innerText= leftBoxer.alt
      secondBoxerName.innerText= rightBoxer.alt

      boxersImages.forEach((img)=>{
        img.setAttribute("style","filter: blur(2px) grayscale(.8); transition: all .3s ease-in-out")
      })
      leftBoxer.setAttribute("style","scale:1.05; contrast: 1.1; transition: all .3s ease-in-out")
      rightBoxer.setAttribute("style","scale:1.05; contrast: 1.1; transition: all .3s ease-in-out")
    })
  })
</script>
